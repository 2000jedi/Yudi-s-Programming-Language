function fact(a : int32) : int32 {
    if (a > 0) {
        return a * fact(a - 1);
    }
    return 1;
}

var global_1 : int32;

function main() {
    var i : int32;
    const j = "Printing factorial from 0 to 11:";
    var arr : int32[12];

    printf("%s\n", j);
    i = 0;
    while (i < 12) {
        arr[i] = fact(i);
        i = i + 1;
    }

    for (i = 0; i < 12; i = i + 1) {
        printf("%2d! = %d\n", i, arr[i]);
    }
}
